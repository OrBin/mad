{
  "manifest_version": 2,
  "name": "CDAD",
  "description": "This addon will help you be less distracted",
  "version": "1.0",
  "background": {
		"scripts": ["background.js"],
		"pages": ["background.html"]
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],

			"js": ["js/jquery.min.js","js/checkerino.js"]
		}
	],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "CDAD"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
		"notifications"
  ]
}
